{# src/ZelmadBundle/Resources/views/Pfee/choix.html.twig #}

{% extends "ZelmadBundle::layout.html.twig" %}

{% block title %}
  Choisir un PFE - {{ parent() }}
{% endblock %}

{% block zelmad_body %}

  <h2>Choisir un PFE</h2>

  <p>
    Etes-vous certain de vouloir choisir ce PFE "{{ pfee.sujet }}" ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('zelmad_choix', {'id': pfee.id}) }}" method="post">
    <a href="{{ path('zelmad_view', {'id': pfee.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour au PFE
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Choisir" class="btn btn-success" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>

{% endblock %}