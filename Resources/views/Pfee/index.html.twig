{# src/ZelmadBundle/Resources/views/Pfee/index.html.twig #}

{% extends "ZelmadBundle::layout.html.twig" %}
	{% block title %}
	  Accueil - {{ parent() }}
	{% endblock %}


{% block zelmad_body %}

	<h2>Liste des PFEE</h2>

	<ul>
		{% for pfee in listPfees %}
		  <li>
			<a href="{{ path('zelmad_view', {'id': pfee.id}) }}">
			  {{ pfee.sujet }}
			</a>
			à {{ pfee.societe.nom }}, à partir du {{ pfee.dateDebut|date('d/m/Y') }} {% if pfee.nbreeleve > 0 %} (Disponible) {% else %} (Déjà pris) {% endif %}
		  </li>

		{% else %}
		  <li>Pas (encore !) d'annoncesde PFE</li>
		{% endfor %}
	</ul>
	

<ul class="pagination">
    {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
    {% for p in range(1, nbPages) %}
      <li{% if p == page %} class="active"{% endif %}>
        <a href="{{ path('zelmad_home', {'page': p}) }}">{{ p }}</a>
      </li>
    {% endfor %}
</ul>
	
{% endblock %}